@*@using Vidly.Models*@
@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Count == 0)
{
    <p1>No movies in list</p1>
}
else
{

    <table class="table table-striped table-hover">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Genre</th>
        </tr>
        <tbody class="">
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Id</td>
                <td><a href="movies/@movie.Id">@movie.Name</a></td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
        </tbody>
    </table>
}
